<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Welcome to my site.{% endblock %}</title>

        {% block stylesheets %}

            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}" />

        {% endblock %}
    </head>

    <body>

        <header class="container fixed-top">
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark rounded ">
                <a class="navbar-brand" href="{{ path("home") }}">
                    <img src="{{ asset('image/icon_yellow.png') }}"  alt="icon" width="40px" height="40px">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path("home") }}">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("admin_show") }}">Administration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown link
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    </ul>
                </div>
                {%  if is_granted("ROLE_USER") %}
                    <a class="btn btn-info float-left" href="{{ path("security_logout") }}">{{ app.user.username }} | Logout</a>
                {% else %}
                    <a class="btn btn-info float-left" href="{{ path("security_login") }}">Login</a>
                    <a class="btn btn-danger float-left ml-2" href="{{ path("security_register") }}">Registration</a>
                {% endif %}
            </nav>
        </header>

        <article class="container wrapper rounded" >

            {% for msg in app.session.flashBag.get('success') %}
                <div class="alert alert-success">
                    {{ msg }}
                </div>
            {% endfor %}

            {% block main %}{% endblock %}

        </article>

        <footer class="container ">
            <h5 class="text-center w-50 m-auto text-danger">Someone famous in <cite title="Source Title">Source Title</cite></h5>
        </footer>


        {% block javascripts %}

            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.9.1/underscore-min.js"></script>


            <script type="text/javascript">
                const div_wrapper = $('article.wrapper');
                const height = $(window).height();

                div_wrapper.css({
                    'min-height': height * 0.9
                });

                'use strict';

                const array = ['hello', 'buy'];
                console.log(array.includes('hello'));

                const set = new Set();
                set.add('hello');
                set.add('buy');

            </script>
        {% endblock %}
    </body>
</html>
