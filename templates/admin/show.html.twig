{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block main %}



    <div class="row">

        <div class="col-sm-12">
            <h4 class="text-center pb-3">
                {{ title }}
            </h4>
        </div>

        <div class="col">

            <table class="table table-dark table-stripped table-hover">
                <caption class="text-info">User table</caption>
                <thead class="bg-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Borm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <a class="text-info" href="{{ path("admin_show_user", {
                                "id": user.id
                            }) }}">{{ user.name }}</a>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.bornAt|date("Y") }}</td>
                        <td><a href="" class="text-success">Edit</a> | <a href="{{ path("admin_delete_user", {'id':user.id}) }}" class="text-danger">Delete</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path("admin_user_add") }}" class="btn btn-success">Add user</a>

        </div>

        <div class="col">
            <table class="table table-dark table-hover">
                <caption class="text-info">User_Car table</caption>
                <thead class="bg-dark">
                <tr>
                    <th>User_id</th>
                    <th>Car_id</th>
                    <th>Years</th>
                </tr>
                </thead>
                <tbody>
                {% for user_car in users_cars %}
                    <tr>
                        <td>
                            <a class="text-info" href="{{ path("admin_show_user", {
                                "id": user_car.user.id
                            }) }}">{{ user_car.user.id }}</a>
                        </td>
                        <td>
                            <a class="text-danger" href="{{ path("admin_show_car", {
                                "id": user_car.car.id
                            }) }}">{{ user_car.car.id }}</a>
                        </td>
                        <td>{{ user_car.years }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>

        <div class="col">
            <table class="table table-dark table-stripped table-hover">
                <caption class="text-info">Car table</caption>
                <thead class="bg-dark">
                <tr>
                    <th>Model</th>
                    <th>Country</th>
                    <th>Made</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for car in cars %}
                    <tr>
                        <td>
                            <a class="text-info" href="{{ path("admin_show_car", {
                                "id": car.id
                            }) }}">{{ car.model }}</a>
                        </td>
                        <td>{{ car.country }}</td>
                        <td>{{ car.madeAt|date("Y") }}</td>
                        <td><a href="" class="text-success">Edit</a> | <a href="" class="text-danger">Delete</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path("admin_car_add") }}" class="btn btn-success">Add car</a>
        </div>
    </div>

{% endblock %}